<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CampgaignPOC.OverviewPage"
             xmlns:vm="clr-namespace:CampgaignPOC.ViewModal" 
             xmlns:local="clr-namespace:CampgaignPOC.Helper">
    
    
    
    
    
    
     <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="TitleTemplate">
                <ViewCell Height="50">
                    <Label Text="TitleTemplate"
                           TextColor="Red"
                           HorizontalOptions="Start"
                           VerticalOptions="Center" />
                    
                    
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="GoalTemplate">
                <ViewCell Height="50">
                    <Label Text="GoalTemplate"
                           TextColor="Blue"
                           HorizontalOptions="Start"
                           VerticalOptions="Center" />
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="CampaignTemplate">
                <ViewCell Height="50">
                    <Label Text="CampaignTemplate"
                           TextColor="Green"
                           HorizontalOptions="Start"
                           VerticalOptions="Center" />
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="CategoryTemplate">
                <ViewCell Height="50">
                    <Label Text="CategoryTemplate"
                           TextColor="Yellow"
                           HorizontalOptions="Start"
                           VerticalOptions="Center" />
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="LocationTemplate">
                <ViewCell Height="50">
                    <Label Text="LocationTemplate"
                           TextColor="Black"
                           HorizontalOptions="Start"
                           VerticalOptions="Center" />
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="SettingsTemplate">
                <ViewCell Height="50">
                    <Label Text="SettingsTemplate"
                           TextColor="Purple"
                           HorizontalOptions="Start"
                           VerticalOptions="Center" />
                
                </ViewCell>
            </DataTemplate>
            
            
            

            <local:EditCampaignTemplateSelector x:Key="MainTemplate"
                                                TitleTemplate="{StaticResource TitleTemplate}"
                                                GoalTemplate="{StaticResource GoalTemplate}"
                                                CampaignTemplate="{StaticResource CampaignTemplate}"
                                                CategoryTemplate="{StaticResource CategoryTemplate}"
                                                LocationTemplate="{StaticResource LocationTemplate}"
                                                SettingsTemplate="{StaticResource SettingsTemplate}">
            </local:EditCampaignTemplateSelector>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Orientation="Vertical"
                 Padding="20">
        <Label Text="{Binding Title}"
               TextColor="Teal"
               FontSize="Medium" />
        <ListView RowHeight="50" x:Name="EditCampaignList"
                  HasUnevenRows="true"
                  ItemTemplate="{StaticResource MainTemplate}">
        </ListView>
    </StackLayout>
</ContentPage>

    
    
    
    
    
    
    
    
    
    
    
    
